{
  "private": true,
  "name": "clientapp",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-esm --no-prerender",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "yarn install && preact watch --no-esm && echo Starting the development server",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "test": "jest ./tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "enzyme": "3.11.0",
    "enzyme-adapter-preact-pure": "2.2.0",
    "google-maps-react": "2.0.6",
    "jest-preset-preact": "1.0.0",
    "preact": "10.4.2",
    "preact-cli-plugin-env-vars": "1.2.1",
    "preact-jsx-chai": "3.0.0",
    "preact-markup": "2.0.0",
    "preact-render-to-string": "5.1.8",
    "preact-router": "3.2.1",
    "rbx": "2.2.0",
    "react-geocode": "0.2.1",
    "react-use-googlelogin": "0.12.4"
  },
  "devDependencies": {
    "@types/jest": "25.2.2",
    "@types/react-geocode": "0.2.0",
    "@types/webpack-env": "1.15.2",
    "@typescript-eslint/eslint-plugin": "2.33.0",
    "@typescript-eslint/parser": "2.33.0",
    "css-loader": "1.0.1",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.2",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.2",
    "preact-cli": "3.0.0-rc.10",
    "prettier": "2.0.5",
    "sirv-cli": "1.0.0-next.4",
    "ts-jest": "26.0.0",
    "typescript": "3.9.2",
    "typings-for-css-modules-loader": "1.7.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/setupTests.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)(spec|test).[jt]s?(x)"
    ],
    "transform": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileTransformer.js"
    },
    "collectCoverage": true
  }
}
